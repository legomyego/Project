# Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_USER=recipes_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=recipes_db

# JWT Configuration
# IMPORTANT: Generate a strong secret key for production
# You can use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please-make-it-long-and-random

# API Configuration
ASPNETCORE_ENVIRONMENT=Production
API_PORT=5010

# Frontend Configuration
NUXT_PUBLIC_API_BASE=http://localhost/api
VITE_API_BASE_URL=http://localhost/api

# Docker Ports (change if ports are occupied)
DB_PORT=5432
API_PORT=5010
APP_PORT=3000
ADMIN_PORT=5173
NGINX_PORT=80
