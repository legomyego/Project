# Environment variables for Nuxt Main App
# Copy this file to .env and update the values for your environment

# API Base URL - where the backend API is running
# Development (nginx): http://recipes.local
#   Note: nginx proxies /api/* requests to localhost:5010
# Development (direct): http://localhost:5010
# Production: https://api.yoursite.com or https://yoursite.com (with API behind /api)
NUXT_PUBLIC_API_BASE_URL=http://recipes.local

# Admin Panel URL - where the React admin panel is running
# Used for "Admin Panel" button (only visible to admins)
# Development (nginx): http://admin.recipes.local
# Development (direct): http://localhost:5173
# Production: https://admin.yoursite.com
NUXT_PUBLIC_ADMIN_URL=http://admin.recipes.local
